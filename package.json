{
  "name": "snake-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "tsx server/server.ts",
    "dev:server": "nodemon --watch server --exec tsx server/server.ts",
    "dev": "concurrently -n \"FRONTEND,BACKEND\" -c \"blue,green\" \"npm run dev:frontend\" \"npm run dev:server\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "@types/ws": "^8.18.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  }
}
